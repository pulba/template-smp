---
// components/Contact.astro
import contactJson from "../content/contact/index.json";
import { SOCIAL_ICON_REGISTRY } from "../config/socialIcons";

const contact = contactJson;

// Fungsi untuk mendapatkan icon berdasarkan type
const getIcon = (type: "phone" | "email" | "address"): string => {
  switch (type) {
    case "phone":
      return `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" /></svg>`;
    case "email":
      return `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" /></svg>`;
    case "address":
      return `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" /><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" /></svg>`;
    default:
      return "";
  }
};

// Type untuk SOCIAL_ICON_REGISTRY
type SocialIconRegistry = Record<string, { label: string; svg: string }>;

// Fungsi untuk mendapatkan social icon
const getSocialIcon = (key: string): string => {
  return (
    (SOCIAL_ICON_REGISTRY as SocialIconRegistry)[key]?.svg ??
    `<svg xmlns="http://www.w3.org/2000/svg" ...>...</svg>`
  );
};

// Fungsi untuk mendapatkan social label
const getSocialLabel = (key: string): string => {
  return (SOCIAL_ICON_REGISTRY as SocialIconRegistry)[key]?.label ?? "";
};

// Labels untuk contact info
const getLabel = (type: "phone" | "email" | "address"): string => {
  switch (type) {
    case "phone": return "Telepon";
    case "email": return "Email";
    case "address": return "Alamat";
    default: return "";
  }
};
---

<!-- Hero Section dengan Gradient Overlay Modern -->
<section class="relative overflow-hidden">
  <!-- Background dengan Multiple Layers -->
  <div
    class="relative min-h-[400px] md:min-h-[450px] w-full bg-cover bg-center bg-no-repeat"
    style={`background-image: url(${contact.hero.backgroundImage})`}
  >
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary/90 via-primary/80 to-secondary/70"></div>
    
    <!-- Decorative Elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-20 -right-20 w-80 h-80 bg-white/5 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-32 -left-20 w-96 h-96 bg-secondary/20 rounded-full blur-3xl"></div>
      <div class="absolute top-1/2 right-1/4 w-40 h-40 bg-white/10 rounded-full blur-2xl"></div>
    </div>
    
    <!-- Content -->
    <div class="container relative z-10 mx-auto px-6 py-20 md:py-28">
      <div class="max-w-2xl">
        <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full mb-6">
          <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
          <span class="text-white/90 text-sm font-medium">Kami Siap Membantu</span>
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
          {contact.hero.title}
        </h1>
        <p class="text-lg md:text-xl text-white/85 leading-relaxed max-w-xl">
          {contact.hero.description}
        </p>
      </div>
    </div>
    
    <!-- Wave Bottom -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg class="w-full h-16 md:h-24" viewBox="0 0 1440 100" preserveAspectRatio="none">
        <path fill="var(--color-bg)" d="M0,50 C360,100 1080,0 1440,50 L1440,100 L0,100 Z"></path>
      </svg>
    </div>
  </div>
</section>

<!-- Contact Info Section -->
<section class="relative -mt-8 md:-mt-12 z-20">
  <div class="container mx-auto px-4 py-12 sm:px-6">
    <!-- Main Contact Card dengan Glassmorphism -->
    <div class="bg-surface/80 backdrop-blur-xl rounded-3xl shadow-2xl border border-border/50 overflow-hidden">
      <!-- Header dengan Gradient -->
      <div class="bg-gradient-to-r from-primary to-secondary px-6 md:px-10 py-6">
        <h2 class="text-2xl md:text-3xl font-bold text-white flex items-center gap-3">
          <span class="flex items-center justify-center w-10 h-10 bg-white/20 backdrop-blur-sm rounded-xl">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
            </svg>
          </span>
          Hubungi Kami
        </h2>
        <p class="text-white/80 mt-2 text-sm md:text-base">Kami siap menjawab pertanyaan dan membantu Anda</p>
      </div>
      
      <!-- Content Grid -->
      <div class="p-6 md:p-10">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          
          <!-- Contact Details -->
          <div class="lg:col-span-1 space-y-4">
            <h3 class="text-lg font-semibold text-heading mb-6 flex items-center gap-2">
              <span class="w-8 h-1 bg-gradient-to-r from-primary to-secondary rounded-full"></span>
              Informasi Kontak
            </h3>
            {
              contact.contactInfo.details.map((item) => (
                <div class="group relative bg-gradient-to-br from-surface to-background hover:from-primary/5 hover:to-secondary/5 p-5 rounded-2xl border border-border/50 hover:border-primary/30 transition-all duration-300 hover:shadow-lg hover:shadow-primary/5 cursor-pointer">
                  <div class="flex items-start gap-4">
                    <div class="flex-shrink-0 w-12 h-12 flex items-center justify-center bg-gradient-to-br from-primary to-secondary rounded-xl text-white shadow-lg shadow-primary/20 group-hover:scale-110 transition-transform duration-300">
                      <span set:html={getIcon(item.type)} />
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-xs font-medium text-muted uppercase tracking-wider mb-1">{getLabel(item.type as "phone" | "email" | "address")}</p>
                      <p class="text-text font-medium break-all group-hover:text-primary transition-colors duration-300">{item.value}</p>
                    </div>
                  </div>
                  <!-- Hover Indicator -->
                  <div class="absolute right-4 top-1/2 -translate-y-1/2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 text-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
                    </svg>
                  </div>
                </div>
              ))
            }
          </div>
          
          <!-- Jam Operasional -->
          <div class="lg:col-span-1">
            <h3 class="text-lg font-semibold text-heading mb-6 flex items-center gap-2">
              <span class="w-8 h-1 bg-gradient-to-r from-primary to-secondary rounded-full"></span>
              Jam Operasional
            </h3>
            <div class="bg-gradient-to-br from-primary/5 to-secondary/5 rounded-2xl p-6 border border-border/50">
              <div class="flex items-center gap-3 mb-6">
                <div class="w-12 h-12 flex items-center justify-center bg-gradient-to-br from-primary to-secondary rounded-xl text-white shadow-lg shadow-primary/20">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-medium text-muted">Jadwal Layanan</p>
                  <p class="text-heading font-semibold">Buka Sekarang</p>
                </div>
              </div>
              <div class="space-y-4">
                {
                  contact.hours.days.map((day, index) => (
                    <div class="flex items-center justify-between p-4 bg-surface rounded-xl border border-border/30 hover:border-primary/30 transition-colors duration-300">
                      <div class="flex items-center gap-3">
                        <div class="w-2 h-2 rounded-full bg-gradient-to-r from-primary to-secondary"></div>
                        <span class="text-text font-medium">{day.day}</span>
                      </div>
                      <span class="text-primary font-semibold bg-primary/10 px-3 py-1 rounded-lg text-sm">{day.time}</span>
                    </div>
                  ))
                }
              </div>
            </div>
          </div>
          
          <!-- Social Media -->
          <div class="lg:col-span-1">
            <h3 class="text-lg font-semibold text-heading mb-6 flex items-center gap-2">
              <span class="w-8 h-1 bg-gradient-to-r from-primary to-secondary rounded-full"></span>
              Ikuti Kami
            </h3>
            <div class="bg-gradient-to-br from-primary/5 to-secondary/5 rounded-2xl p-6 border border-border/50">
              <p class="text-muted text-sm mb-6">Tetap terhubung dengan kami melalui media sosial untuk mendapatkan informasi terbaru.</p>
              <div class="flex flex-wrap gap-3">
                {
                  (contact.socialMedia?.links ?? []).map((social) => (
                    <a
                      href={social.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      title={getSocialLabel(social.iconKey)}
                      class="group relative flex items-center justify-center w-14 h-14 bg-surface rounded-2xl border border-border/50 hover:border-primary hover:bg-gradient-to-br hover:from-primary hover:to-secondary transition-all duration-300 hover:shadow-xl hover:shadow-primary/20 hover:-translate-y-1"
                    >
                      <span
                        set:html={getSocialIcon(social.iconKey)}
                        class="text-primary group-hover:text-white transition-colors duration-300 *:w-6 *:h-6"
                      />
                      <!-- Tooltip -->
                      <span class="absolute -bottom-8 left-1/2 -translate-x-1/2 text-xs font-medium text-muted opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap">
                        {getSocialLabel(social.iconKey)}
                      </span>
                    </a>
                  ))
                }
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Map Section -->
    <div class="mt-12">
      <div class="flex items-center gap-3 mb-6">
        <span class="w-10 h-10 flex items-center justify-center bg-gradient-to-br from-primary to-secondary rounded-xl text-white shadow-lg shadow-primary/20">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
          </svg>
        </span>
        <div>
          <h3 class="text-xl font-bold text-heading">Lokasi Kami</h3>
          <p class="text-muted text-sm">Temukan kami di Google Maps</p>
        </div>
      </div>
      <div class="relative group">
        <!-- Decorative Border -->
        <div class="absolute -inset-1 bg-gradient-to-r from-primary via-secondary to-primary rounded-3xl opacity-30 group-hover:opacity-50 blur-sm transition-opacity duration-300"></div>
        <div class="relative bg-surface rounded-2xl overflow-hidden border border-border/50">
          <iframe
            src={contact.mapEmbedUrl}
            width="600"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            class="w-full h-[400px] md:h-[500px]"
            referrerpolicy="no-referrer-when-downgrade"
            title="Lokasi MAS Miftahul Huda"></iframe>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Smooth animations */
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
</style>
